<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Set 方法 -->
    <bean id="book" class="com.example.di.Book">
        <property name="bookName" value="java"/>
        <property name="author" value="colin"/>
    </bean>

    <!-- 构造器注入 -->
    <bean id="bookConstructor" class="com.example.di.Book">
        <constructor-arg name="bookName" value="C#"/>
        <constructor-arg name="author" value="Colin"/>
    </bean>

</beans>